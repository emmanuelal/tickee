<% @title = "Home | Ticketee"%>
<div class="container">
  <div class=" information_holder row ">
    <!-- design look -->
    <div class="header">
    <h2 class='f-left'>Projects</h2>
    <% admins_only do %>
       <%= link_to "New Project", new_admin_project_path,:class=>'button_black f-left'%>
     <% end %>  
    </div><!-- header -->  
     <div class="m-holder">
<div id="projects">
<% @projects.each do |project| %>
         <ul>
              <li>
           	      <h2><%= link_to project.name, project %></h2>
                  <p><%= project.description %></p>
                  <span class='time_ago'> created <%= time_ago_in_words(project.created_at) %></span>
            </li>
         </ul>  
<% end %>
</div>

 </div><!-- holder-->     
 <!-- design look --> 
 </div><!-- information_holder -->

</div><!-- container -->